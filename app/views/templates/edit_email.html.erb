<%= link_to("<< Back", :back, :class => 'back-link') %>

<h2>Edit Attachment</h2>

<div class='row'>
	<div class='col-md-12'>
		<%= form_for(:attachment, :url => {:action => 'update_attachment', :format => params[:format]}) do |f| %>
			<div class="form-buttons">
				<%= submit_tag("Save", class: 'btn btn-primary pull-left') %>
			</div>

			<%= text_area_tag("attachment_content", @attachment_content, :rows => 35, class: 'span12') %>
		<% end %>
	</div>
</div>