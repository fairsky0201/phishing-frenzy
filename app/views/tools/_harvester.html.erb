<!-- Modal -->
<div class="modal fade" id="enumerateEmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">
          <span class="glyphicon glyphicon-envelope"></span> Enumerate Email Addresses
        </h4>
      </div>
      <div class="modal-body">
        <%= form_tag(tools_enumerate_emails_path) do %>
          <%= label :domain, "Email Address Domain" %>
          <%= text_field_tag(:domain, '', autofocus: true, required: true,
              placeholder: 'Enter email address domain (e.g. domain.net)',
              class: 'form-control') %><br>
          <%= label :crawls, "Number of Links to Crawl" %>
          <%= select_tag(:crawls, options_for_select(
                [['50', 50], ['100', 100], 
                ['150', 150], ['200', 200], 
                ['250', 250], ['300', 300], 
                ['350', 350], ['400', 400], 
                ['450', 450], ['500', 500], 
                ['550', 550], ['600', 600], 
                ['650', 650], ['700', 700], 
                ['750', 750], ['800', 800], 
                ['850', 850], ['900', 900], 
                ['950', 950], ['1000', 1000]]
          ), class: 'form-control') %><br>
          <%= submit_tag "Enumerate Emails", class: 'btn btn-primary' %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>