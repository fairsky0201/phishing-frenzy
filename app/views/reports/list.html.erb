<% @page_title = "Reports" %>

<div class="page-header">
	<h2>Reports</h2>	
</div>

<%= paginate @campaigns, :theme => 'twitter-bootstrap-3' %>

<h3>Launched Phishing Campaigns</h3>

<div ><%= pluralize(@campaigns.size, 'campaign') %> launched</div>

<% if @campaigns.size > 0 %>
	<table class="table table-striped" summary="Campiagn list">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Client</th>
			<th>Description</th>
			<th>Scope</th>
			<th>Active</th>
			<th>Actions</th>
		</tr>

		<% @campaigns.each do |campaign| %>
		
		<tr>
			<td><%= image_tag('chart.png', :size => '35x35') %></td>      
			<td><%= campaign.name %></td>
			<td><%= campaign.description %></td>
			<td><%= campaign.scope %></td>
			<td><%= campaign.active ? image_tag('green-light.png', :size => '11x11') : image_tag('red-light.png', :size => '11x11') %></td>
			<td class="actions">
				<%= link_to("Stats", {:action => 'stats', :id => campaign.id}, :class => 'btn btn-mini') %>
			</td>
		</tr>
		<% end %>
	</table>
<% end %>