<% @page_title = "Campaign Details" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<h2>Campaign Details</h2>

<div class="campaign show">
	<table class="table">

		<tr>
			<th>ID</th>
			<td><%= @campaign.id %></td>
		</tr>
		<tr>
			<th>Client</th>
			<td><%= @campaign.name %></td>
		</tr>
		<tr>
			<th>Description</th>
			<td><%= @campaign.description %></td>
		</tr>
		<tr>
			<th>Scope</th>
			<td><%= @campaign.scope %></td>
		</tr>
		<tr>
			<th>Active</th>
			<td><%= @campaign.active %></td>
		</tr>
	</table>

<div class="page-header">
	<h3>Actions</h3>
</div>

	<ul>
		<li><%= link_to('View SMTP Communications', {:action => 'smtp', :id => params[:id]}) %></li>
		<li><%= link_to('Manage Campaign Options', {:action => 'options', :id => params[:id]}) %></li>
		<li><%= link_to "Delete Campaign", campaign_path(@campaign), method: :delete,confirm: 'Are you sure you want to permanently delete this campaign?' %></li>
	</ul>
	
</div>
